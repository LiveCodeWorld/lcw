    end if
end day_Suffix

function daysBetween startDate, someDate
    convert startDate to seconds
    convert someDate to seconds
    put (someDate - startDate)/(60*60*24) into days
    return days
end daysBetween

function day_Round someDate
    -- not tested
    convert someDate to dateItems
    convert someDate to dateItems
